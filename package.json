{
  "version": "0.0.0-development",
  "description": "A simple tools for write and test quantumult scripts easier",
  "private": true,
  "license": "MIT",
  "author": {
    "name": "oustn",
    "email": "oustnzeng@gmail.com"
  },
  "keywords": [
    "Quantumult",
    "Quantumult x",
    "rewrite",
    "task",
    "javascript",
    "typescript"
  ],
  "scripts": {
    "build": "turbo run build --filter=./packages/*",
    "dev": "turbo run dev --filter=./packages/*",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,md,json}\"",
    "postinstall": "husky install",
    "release": "turbo run build --filter=./packages/* && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.1",
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@scriptwriter/cli": "*",
    "@scriptwriter/eslint-config": "*",
    "@scriptwriter/quantumult": "*",
    "@scriptwriter/tsconfig": "*",
    "@turbo/gen": "^1.9.7",
    "@types/node": "^18.16.18",
    "eslint": "^8.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^3.0.0",
    "turbo": "latest",
    "typescript": "^5.1.3"
  },
  "name": "scriptwriters",
  "packageManager": "npm@8.19.3",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/oustn/scriptwriters.git"
  },
  "engines": {
    "node": ">= 18"
  }
}
